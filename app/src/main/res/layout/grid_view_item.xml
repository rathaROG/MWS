<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grid_view_item_background"
        android:id="@+id/imageViewBackground"/>

    <TextView
        android:text="Title (field name)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewTitle" />

    <TextView
        android:text="Moisture: 25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle"
        android:id="@+id/textViewMoisture" />

    <TextView
        android:text="Temperature: 28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMoisture"
        android:layout_alignStart="@+id/textViewMoisture"
        android:id="@+id/textViewTemp" />

    <TextView
        android:text="Autopilot: ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:id="@+id/textViewAutopilotStatus" />
</RelativeLayout>